# FinanceFlow Backend Environment Variables
# Copy this file to .env and fill in your values

# MongoDB Connection
MONGO_URI=mongodb+srv://your_username:your_password@cluster.mongodb.net/financeflow?retryWrites=true&w=majority

# JWT Secret (use a strong random string)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# JWT Expiration
JWT_EXPIRE=30d

# Server Port
PORT=5000

# Environment (development or production)
NODE_ENV=development
